  "development": {
    "node_version": ">=18.0.0",
    "npm_version": ">=9.0.0",
    "ports": {
      "store": 5173,
      "console": 5174,
      "api": 3001,
      "account": 5175
    },
    "tools": {
      "prettier": "^3.1.0",
      "eslint": "^8.55.0",
      "concurrently": "^8.2.2"
    }
  },

  "deployment": {
    "provider": "vercel",
    "domains": {
      "store": "store.bagdja.com",
      "console": "console.bagdja.com", 
      "api": "api.bagdja.com",
      "account": "account.bagdja.com"
    },
    "environment": {
      "development": {
        "api_url": "http://localhost:3001",
        "supabase_url": "=https://vwtvghzabftcikbxtwad.supabase.co"
      },
      "production": {
        "api_url": "https://api.bagdja.com",
        "supabase_url": "=https://vwtvghzabftcikbxtwad.supabase.co"
      }
    }
  },

  "security": {
    "password": {
      "min_length": 8,
      "require_uppercase": true,
      "require_lowercase": true,
      "require_numbers": true,
      "require_symbols": true
    },
    "rate_limiting": {
      "login": {
        "max_attempts": 5,
        "window_minutes": 15
      },
      "registration": {
        "max_attempts": 3,
        "window_minutes": 60
      }
    },
    "session": {
      "timeout_hours": 24,
      "refresh_threshold_minutes": 5
    }
  },

  "features": {
    "registration": true,
    "social_login": false,
    "two_factor_auth": false,
    "dark_mode": true,
    "analytics": true,
    "notifications": true,
    "real_time": true,
    "file_upload": true,
    "email_verification": true
  },

  "integrations": {
    "analytics": {
      "google_analytics": {
        "enabled": false,
        "tracking_id": "G-XXXXXXXXXX"
      },
      "sentry": {
        "enabled": false,
        "dsn": "https://your-sentry-dsn"
      }
    },
    "payment": {
      "stripe": {
        "enabled": false,
        "public_key": "pk_test_...",
        "secret_key": "sk_test_..."
      }
    },
    "email": {
      "provider": "supabase",
      "templates": {
        "welcome": true,
        "password_reset": true,
        "email_verification": true
      }
    }
  },

  "scripts": {
    "setup": {
      "description": "Setup project with default configurations",
      "commands": [
        "npm run install:all",
        "npm run setup:env",
        "npm run setup:git",
        "npm run setup:vscode"
      ]
    },
    "install": {
      "description": "Install dependencies for all services",
      "commands": [
        "npm install",
        "npm run install:shared",
        "npm run install:store", 
        "npm run install:console",
        "npm run install:api",
        "npm run install:account"
      ]
    },
    "dev": {
      "description": "Start all services in development mode",
      "commands": [
        "npm run dev"
      ]
    },
    "build": {
      "description": "Build all services for production",
      "commands": [
        "npm run build:shared",
        "npm run build:store",
        "npm run build:console", 
        "npm run build:api",
        "npm run build:account"
      ]
    },
    "deploy": {
      "description": "Deploy all services to production",
      "commands": [
        "npm run build",
        "npm run deploy:store",
        "npm run deploy:console",
        "npm run deploy:api", 
        "npm run deploy:account"
      ]
    }
  }
}
