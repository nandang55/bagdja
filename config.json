{
  "name": "Bagdja Marketplace Configuration",
  "version": "1.0.0",
  "description": "Centralized configuration for all Bagdja services",
  
  "project": {
    "name": "bagdja",
    "version": "1.0.0",
    "description": "Modern marketplace platform with microservices architecture",
    "author": "Bagdja Team",
    "license": "MIT",
    "repository": "https://github.com/your-username/bagdja.git"
  },

  "services": {
    "bagdja-store-frontend": {
      "name": "Bagdja Store",
      "description": "Public marketplace for buyers",
      "port": 5173,
      "url": "http://localhost:5173",
      "production_url": "https://store.bagdja.com",
      "framework": "react",
      "build_tool": "vite",
      "styling": "tailwindcss",
      "features": [
        "product_browsing",
        "search",
        "categories",
        "user_authentication"
      ]
    },
    "bagdja-console-frontend": {
      "name": "Bagdja Console", 
      "description": "Developer dashboard for sellers",
      "port": 5174,
      "url": "http://localhost:5174",
      "production_url": "https://console.bagdja.com",
      "framework": "react",
      "build_tool": "vite",
      "styling": "tailwindcss",
      "features": [
        "product_management",
        "analytics",
        "dashboard",
        "developer_tools"
      ]
    },
    "bagdja-api-services": {
      "name": "Bagdja API Services",
      "description": "Backend API microservices",
      "port": 3001,
      "url": "http://localhost:3001",
      "production_url": "https://api.bagdja.com",
      "framework": "express",
      "runtime": "nodejs",
      "database": "supabase",
      "features": [
        "authentication",
        "product_crud",
        "user_management",
        "business_logic"
      ]
    },
    "bagdja-account": {
      "name": "Bagdja Account",
      "description": "Central authentication service",
      "port": 5175,
      "url": "http://localhost:5175",
      "production_url": "https://account.bagdja.com",
      "framework": "react",
      "build_tool": "vite",
      "styling": "tailwindcss",
      "features": [
        "user_registration",
        "login_logout",
        "password_management",
        "profile_settings"
      ]
    }
  },

  "shared": {
    "typescript": {
      "version": "^5.3.0",
      "strict": true,
      "target": "ES2022",
      "module": "ESNext",
      "moduleResolution": "bundler"
    },
    "styling": {
      "framework": "tailwindcss",
      "version": "^3.4.0",
      "theme": {
        "primary": "#0ea5e9",
        "secondary": "#64748b", 
        "success": "#22c55e",
        "warning": "#f59e0b",
        "error": "#ef4444"
      }
    },
    "database": {
      "provider": "supabase",
      "features": [
        "postgresql",
        "authentication",
        "realtime",
        "storage"
      ]
    }
  },

